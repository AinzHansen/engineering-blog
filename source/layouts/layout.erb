<%= partial "partials/head" %>
    <body class="<%= page_classes %>">
        <%= partial "partials/header" %>
        <section>
            <div class="grid">
                <article class="post--featured">
                    <div class="content">
                        <% blog.articles[0...1].each do |article| %>
                            <img src="/assets/img/profiles/prof-<%= article.data.author %>.png" class="profile-picture">
                            <h1 class="title"><a href="<%= article.url %>"><%= article.title %></a></h1>
                            <div class="author-information">
                                <ul>
                                    <li><%= article.data.author_full %></li>
                                    <li>&#8226;</li>
                                    <li><span><%= article.data.date %></span></li>
                                    <li><%= article.data.author_alt %></li>
                                </ul>
                            </div>
                            <div class="summary">
                                <%= article.summary %>
                            </div>
                            <a href="<%= article.url %>" class="read-more">Read more</a>
                        <% end %>
                    </div>
                </article>
            </div>
        </section>
        <section class="section--gray">
            <div class="grid">
                <% blog.articles[1...10].each do |article| %>
                    <div class="post--listing">
                        <div class="content">
                            <h1 class="title"><a href="<%= article.url %>"><%= article.title %></a></h1>
                            <div class="author-information">
                                <ul>
                                    <li><%= article.data.author_full %></li>
                                    <li>&#8226;</li>
                                    <li><span><%= article.data.date %></span></li>
                                    <li><%= article.data.author_alt %></li>
                                </ul>
                            </div>
                            <div class="summary">
                                <%= article.summary %>
                            </div>
                            <a href="<%= article.url %>" class="read-more">Read more</a>
                        </div>
                    </div>
                <% end %>
            </div>
        </section>
        <%= partial "partials/footer" %>
        <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js", "main" %>
    </body>
</html>
