<body class="<%= page_classes %>">
    <%= partial "partials/head" %>
    <%= partial "partials/header" %>
    <section>
        <div class="grid">
            <article class="post--featured">
                <div class="content">
                    <% blog.articles[0...1].each do |article| %>
                        <img src="/assets/img/profiles/prof-<%= article.data.author %>.png" class="profile-picture">
                        <h1><a href="<%= article.url %>"><%= article.title %></a></h1>
                        <div class="author-information">
                            <ul>
                                <li><%= article.data.author_full %></li>
                                <li><%= article.data.date %></li>
                                <li><%= article.data.author_alt %></li>
                            </ul>
                        </div>
                        <div class="summary">
                            <%= article.summary %>
                        </div>
                        <a href="<%= article.url %>" class="read-more">Read more</a>
                    <% end %>
                </div>
            </article>
        </div>
    </section>
    <section>
        <div class="grid">
                <% blog.articles[1...10].each do |article| %>
                <div class="post">
                    <header>
                        <h1 class="title">
                        <a href="<%= article.url %>">
                            <%= article.title %>
                        </a>
                        </h1>
                        <!-- <div class="meta">
                            <ul class="tags">
                                <li><%= article.data.tags %></li>
                            </ul>
                        </div> -->
                        <div class="author">
                            <div class="prof">
                                <img src="/assets/img/profiles/prof-<%= article.data.author %>.png">
                                <div class="author-name"><%= article.data.author_full %></div>
                                <div class="date"><%= article.data.date %></div>
                                <span class="guest-author"><%= article.data.author_alt %></span>
                            </div>
                        </div>
                    </header>
                    <%= article.summary %>
                    <a href="<%= article.url %>" class="read-more">Read more</a>
                </div>
                <% end %>
            </div>
        </div>
        <%= partial "partials/footer" %>
        <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js", "main" %>
    </body>
</html>
