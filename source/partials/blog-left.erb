<div class="blog-left">
	<header class="main-header">
		<a href="/#/"><div class="logo"><img src="/assets/img/logo-d.png"></div></a>
		<div class="tag"><img src="/assets/img/tag.png"></div>
	</header>
	<div class="intro">
		<p>
			<%= current_page.data.sum %>
		</p>
	</div>
	<div class="popular-posts">
		<h1><i class="fa fa-eye"></i> Read More Articles</h1>
		<ul>
			<% blog.articles[0...5].each do |article| %>
			<li><a href="<%= article.url %>"><%= article.title %></a></li>
			<% end %>
		</ul>
	</div>
	<nav>
		<a href="/archives">Archives</a>
		<a href="//catalyze.io/jobs">We're Hiring</a>
		<a href="//catalyzeio.github.io">Open Source</a>
		<a href="//catalyze.io/about">Catalyze</a>
	</nav>
</div>
<!-- Give me an article to read -->
<% prev_article = current_article.previous_article %>
<% if prev_article %>
	<a class="button-more" href="<%= prev_article.url %>" rel="prev" title="Previous article: <%= prev_article.title %>">
		<i class="fa fa-chevron-right"></i> <%= prev_article.title %>
	</a>
<% end %>
<% next_article = current_article.next_article %>
<% if next_article %>
	<a class="button-more" href="<%= next_article.url %>" rel="next" title="Next article: <%= next_article.title %>">
		<i class="fa fa-chevron-right"></i> <%= next_article.title %>
	</a>
<% end %>